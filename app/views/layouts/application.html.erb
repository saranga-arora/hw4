<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <div>
      <%= flash[:notice] %>
    </div>
    <div>
      <a href="/">Home</a>
        <% if @current_user %>
            Welcome <%= @current_user.first_name %>
            <%= button_to "Logout", "/sessions/logout", method: :delete %>
        <% else %>
            <a href="/sessions/new" class="btn btn-default">Login</a> |
            <a href="/users/new" class="btn btn-default">Sign Up</a>
        <% end %>
    </div>

    <%= yield %>
  </body>
</html>
