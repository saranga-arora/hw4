<h1 class="container-fluid px-6"><%= @place.name %></h1>

<% if @current_user %>

  <p class="container-fluid px-6">
    <a class = "btn btn-primary btn-sm" href="/posts/new?place_id=<%= @place.id %>">New Post</a>
    <a class = "btn btn-secondary btn-sm" href="/places">Back to All Places</a>
  </p>

  <h4 class="container-fluid px-6">My Posts</h4>
  <div class="col-6">
    <% for post in @place.posts %>
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>



      <p><%= post.description %></p>
    <% end %>
  </div> 

<% end %>