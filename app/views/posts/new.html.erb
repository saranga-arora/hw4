<h1 class="container-fluid px-6">New Post</h1>

<div class="container-fluid px-6">
  <%= form_with model: @post do |form| %>
    <p>
      <%= form.label "title" %>
      <%= form.text_field "title" %>
    </p>
    <p>
      <%= form.label "description" %>
      <%= form.text_field "description" %>
    </p>
    <p>
      <%= form.label "posted_on" %>
      <%= form.date_field "posted_on" %>
    </p>
    <p>
      <%= form.label "image", class: "form-label" %>
      <%= form.file_field "uploaded_image", accept: "image/png,image/jpg,image/jpeg", class: "form-control form-control-sm" %>
    </p> 
    <p>
      <%= form.submit "Create Post", class: "btn btn-primary btn-sm" %>
    </p>
    <%= form.hidden_field "place_id" %>
  <% end %>
</div> 